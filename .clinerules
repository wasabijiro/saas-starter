{
  "name": "saas-starter",
  "version": "1.0.0",
  "rules": {
    "directory": {
      "root": {
        "required": [
          "src/",
          "public/",
          "supabase/",
          ".env.example",
          "package.json",
          "README.md"
        ]
      },
      "src": {
        "required": [
          "app/",
          "components/",
          "lib/",
          "backend/"
        ]
      },
      "backend": {
        "required": [
          "adapter/",
          "domain/",
          "infrastructure/",
          "usecase/"
        ]
      }
    },
    "naming": {
      "files": {
        "react": "^[a-z][a-zA-Z0-9]*\\.(tsx|ts)$",
        "component": "^[A-Z][a-zA-Z0-9]*\\.(tsx|ts)$",
        "test": "^[a-zA-Z0-9]*\\.test\\.(ts|tsx)$"
      },
      "directories": {
        "component": "^[a-z][a-zA-Z0-9-]*$",
        "feature": "^[a-z][a-zA-Z0-9-]*$"
      }
    },
    "architecture": {
      "clean": {
        "layers": [
          "adapter",
          "domain",
          "infrastructure",
          "usecase"
        ],
        "dependencies": {
          "adapter": ["domain", "usecase"],
          "domain": [],
          "infrastructure": ["domain"],
          "usecase": ["domain"]
        }
      }
    },
    "supabase": {
      "required": [
        "migrations/",
        "config.toml",
        "seed.sql"
      ],
      "migrations": {
        "naming": "^[0-9]{14}_[a-z0-9_]+\\.sql$"
      }
    },
    "nextjs": {
      "routing": {
        "app": true,
        "pages": false
      },
      "api": {
        "location": "src/app/api"
      }
    },
    "testing": {
      "required": [
        "jest.config.js",
        "src/**/*.test.ts",
        "src/**/*.test.tsx"
      ]
    }
  }
}